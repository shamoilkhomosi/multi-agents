function dzdt = maspde_ideal(t, z, x, phiL, phiR, Na, h, Nh, k, a, v, kr, r)

xsect = zeros(Na, Nh/Na);
for i=1:Na
    xsect(i,:) = x((i-1)*Nh/Na+1:(i)*Nh/Na);
end
dzdt = zeros(Nh, 1);
% define the boundary conditions
z(1) = phiL;
z(Nh+1) = phiR;

% persistent e
% if isempty(e)
%     e = 0;
% end
% e = e + (z-r);
% dzdx   = zeros(Nh, 1);
% d2zdx2 = zeros(Nh, 1);

for i=1:Na
    i_global = (i-1)*Nh/Na+1:(i)*Nh/Na;
    x_lead = round(xsect(i,round(Nh/Na/2))/h)+1;
    z_lead = z(x_lead);
    
    for j = i_global
        if j == 1
            dzdt(j) = v*(z(j+1) - z(j))/h              + a*z(j) - k*(z(j)) + kr*r ;
        elseif j == x_lead
            dzdt(j) = v*(z(j+1) - 2*z(j) + z(j-1))/h^2 + a*z_lead - k*(z_lead) + kr*r ;
        else
            dzdt(j) = v*(z(j+1) - 2*z(j) + z(j-1))/h^2 + a*z(j) - k*(z(j)) + kr*r ;
        end
    end
end

dzdt(1) = v*(z(j+1) - z(j))/h ; %need to add r term in local cont if r is non-constant
    %+ a*z(j) - k*(z(j)) + kr*r 
dzdt(end) = v*(z(j-1) - z(j))/h ;

end

















